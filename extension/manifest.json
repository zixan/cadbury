{
    "manifest_version": 3,
    "name": "Cadbury",
    "version": "1.0",
    "description": "The agent that supercharges solutions consultants",
    "permissions": ["tabs"],
    "content_scripts": [
        {
          "matches": ["*://localhost/*"],
          "js": ["content.js"]
        }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
        "*://localhost/*"
    ],
    "externally_connectable": {
        "matches": ["*://localhost/*"]
    },
    "web_accessible_resources": [
      {
          "resources": ["style.css"],
          "matches": ["<all_urls>"]
      }
  ]
  }